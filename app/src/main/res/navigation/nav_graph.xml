<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/MainFragment">

    <fragment
            android:id="@+id/MainFragment"
            android:name="de.htw.gezumi.MainFragment"
            android:label="@string/main_label"
            tools:layout="@layout/fragment_main">

        <action android:id="@+id/action_MainFragment_to_Host" app:destination="@id/Host"/>
        <action android:id="@+id/action_MainFragment_to_Join" app:destination="@id/Join"/>
    </fragment>
    <fragment
            android:id="@+id/Host"
            android:name="de.htw.gezumi.HostFragment"
            android:label="@string/host_label"
            tools:layout="@layout/fragment_host"/>

    <fragment
            android:id="@+id/Join"
            android:name="de.htw.gezumi.JoinFragment"
            android:label="@string/host_label"
            tools:layout="@layout/fragment_join">
    </fragment>
</navigation>