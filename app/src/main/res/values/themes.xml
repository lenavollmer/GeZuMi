<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeZuMi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gezumi_blue</item>
        <item name="colorPrimaryVariant">@color/gezumi_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Game colors -->
        <item name ="targetShapeColor">@color/gray_300</item>
        <item name ="playerNameColor">@color/black</item>
        <item name ="playerSelfColor">@color/gezumi_yellow</item>

        <item name="popUpColor">@color/gezumi_white</item>
        <item name="popUpTextColor">@color/gezumi_gray</item>

        <item name="bottomDrawerColor">@color/white</item>
        <item name="bottomDrawerTextColor">@color/black</item>

        <item name="logoTextColor">@color/white</item>
        <item name="logoTextOutlineColor">@color/black</item>

    </style>
    <style name="Theme.GeZuMi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>