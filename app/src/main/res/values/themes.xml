<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeZuMi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00A7EE</item>
        <item name="colorPrimaryVariant">#00A7EE</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Game colors -->
        <item name ="targetShapeColor">@color/gray_300</item>

        <item name="popUpColor">#EEEEEE</item>
        <item name="popUpTextColor">#333333</item>

        <item name="bottomDrawerColor">@color/white</item>
        <item name="bottomDrawerTextColor">@color/black</item>

    </style>
    <style name="Theme.GeZuMi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GeZuMi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.GeZuMi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>